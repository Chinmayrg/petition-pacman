<main class="nes-container is-dark is-rounded is-centered with-title">
    <p class="title">Save Ghosts from Pacman!</p>
    {{> characters}}
    {{#if error}}
        {{> error}}
    {{/if}}
    <form action="/profile" method="post">
        <input class="nes-input" type="text" name="age" placeholder="Age">
        <input class="nes-input" type="text" name="city" placeholder="City">
        <input class="nes-input" type="text" name="url" placeholder="Homepage">
        <input class="nes-input" type="hidden" name="_csrf" value={{csrfToken}}>
        <button class="nes-btn is-primary" type="submit" name="submit">Continue</button>
    </form>
</main>
